#commentlist
  #commentwindow
    %ul
    - @comments.each do |comment|
      %li.activity
        %a{:href => "#{chwink_path(comment.chwink)}"} 
          = comment.chwink.name
        \:
        %img{ :src => "#{comment.user.try(:image)}", :height => "16px", :width => "16px"}
        = comment.user.try(:name)
        says, '
        = comment.comment
        \'  
